{
  "manifest_version": 2,
  "name": "Git Git",
  "description": "Git Git gamification",
  "version": "0.2",
  "permissions": [
      "tabs",
      "http://*/*",
      "https://*/",
      "activeTab",
      "webNavigation",
      "storage"
  ],
  "background": [
    {
      "matches": ["http://github/*"],
      "js": ["background.bundle.js"]
    }
  ],
  "content_scripts": [
    {
      "matches": ["http://github/*", "https://*/*", "file:///*/*"],
      "css": ["style.css"],
      "js": ["content.bundle.js"],
      "all_frames": true
    }
  ],
  "browser_action": {
    "default_title": "Make open source even more fun!",
    "default_icon": {
      "19": "assets/sub19.png",
      "38": "assets/sub38.png",
      "128": "assets/sub128.png"
    }
  }
}
